CREATE TABLE TBL_PEOPLE(
    COL_PEOPLE_ID INT AUTO_INCREMENT PRIMARY KEY,
    COL_PEOPLE_NAME VARCHAR(255),
    COL_PEOPLE_CPF VARCHAR(255) UNIQUE,
    COL_PEOPLE_PHONE_NUMBER VARCHAR(255) UNIQUE,
    COL_PEOPLE_COUNTRY VARCHAR(255),
    COL_PEOPLE_CITY VARCHAR(255),
    COL_PEOPLE_STREET VARCHAR(255),
    COL_PEOPLE_HOUSE_NUMBER VARCHAR(255),
    COL_PEOPLE_IMG VARCHAR(255)
);


CREATE TABLE TBL_USERS(
    COL_USERS_ID INT AUTO_INCREMENT PRIMARY KEY,
    COL_USERS_EMAIL VARCHAR(255) UNIQUE,
    COL_USERS_PASSWORD VARCHAR(255),
    COL_USERS_IS_ACTIVE boolean DEFAULT FALSE,
    COL_USERS_IS_CHANGING_PASSWORD boolean DEFAULT FALSE,
    COL_USERS_TEMPORARY_PASSWORD VARCHAR(255),
    COL_USERS_IS_FIRST_LOGGIN boolean DEFAULT FALSE,
    COL_USERS_FK_PEOPLE_ID INT,
    FOREIGN KEY (COL_USERS_FK_PEOPLE_ID) REFERENCES TBL_PEOPLE(COL_PEOPLE_ID)
);

CREATE TABLE TBL_MODULES(
    COL_MODULES_ID INT AUTO_INCREMENT PRIMARY KEY,
    COL_MODULES_NOME VARCHAR (255) UNIQUE,
);

CREATE TABLE TBL_PERMISSIONS(
    COL_PERMISSIONS_ID INT AUTO_INCREMENT PRIMARY KEY,
    COL_PERMISSIONS_NOME VARCHAR(255),
    COL_PERMISSIONS_ACTION VARCHAR(255),
    COL_PERMISSIONS_FK_MODULES_ID INT,
    FOREIGN KEY (COL_PERMISSIONS_FK_MODULES_ID) REFERENCES TBL_MODULES(COL_MODULES_ID)
);

CREATE TABLE TBL_USERS_HAS_PERMISSIONS(
    COL_USERS_HAS_PERMISSIONS_ID INT AUTO_INCREMENT PRIMARY KEY,
    COL_USERS_HAS_PERMISSIONS_FK_PERMISSIONS_ID INT,
    COL_USERS_HAS_PERMISSIONS_FK_USERS_ID INT,
    FOREIGN KEY (COL_USERS_HAS_PERMISSIONS_FK_PERMISSIONS_ID) REFERENCES TBL_PERMISSIONS(COL_PERMISSIONS_ID),
    FOREIGN KEY (COL_USERS_HAS_PERMISSIONS_FK_USERS_ID) REFERENCES TBL_USERS(COL_USERS_ID)
);